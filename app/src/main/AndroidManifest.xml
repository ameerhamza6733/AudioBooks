<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ameerhamza6733.businessaudiobook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.DetailActivity" />
        <activity android:name=".mediaPlayer.playerActivty"/>
       <service android:name=".mediaPlayer.PlayerForegroundService"/>
        <receiver android:name=".mediaPlayer.NotificationHelper$myNotificationCloseButtonHandler"/>
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationFastForwardButtonHandler"/>
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationFastRewindButtonHandler"/>
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationPlayButtonHandler"/>
    </application>

</manifest>