<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ameerhamza6733.audioBooksFreeOnlineListen">
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application

        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activitys.DetailTabActivity"
            android:screenOrientation="portrait" />

        <service android:name=".mediaPlayer.PlayerForegroundService" />
        <service android:name="cn.woblog.android.downloader.DownloadService">
            <intent-filter>
                <action android:name="cn.woblog.android.downloader.DOWNLOAD_SERVICE" />
            </intent-filter>
        </service>

        <receiver android:name=".mediaPlayer.NotificationHelper$myNotificationCloseButtonHandler" />
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationFastForwardButtonHandler" />
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationFastRewindButtonHandler" />
        <receiver android:name=".mediaPlayer.NotificationHelper$NotificationPlayOrPauseButtonHandler" />
        <receiver android:name=".mediaPlayer.PlayerForegroundService$StartPlayerActivtyBrodcastReciver" />

        <activity
            android:name=".activitys.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.feedbackActivity" />
        <activity android:name=".activitys.DownloaderActivty" />
        <activity android:name=".activitys.OfflineActivity" />
        <activity android:name=".activitys.HistoryActivity"></activity>
    </application>

</manifest>